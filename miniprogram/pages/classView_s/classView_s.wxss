/* pages/classView_s/classView_s.wxss */

page{ background: #f6f6f6;}
view{ overflow: hidden;}
text{ display: block;}
.classInfo{ width: 100%;}
.classInfo view{ width: 50%; font-size: 30rpx; color: #333; padding: 10rpx 20rpx; border-bottom: 2rpx solid #f0e6cc; border-right: 2rpx solid #f0e6cc; float: left; box-sizing: border-box; overflow: hidden; position: relative;}
.classInfo image{ position: absolute; right: 20rpx; width: 45rpx; height: 45rpx; top: 10rpx;}
.classInfo view text{ width: 100%; margin-bottom: 5rpx;}
.classInfo .lessonName{ width: 100%; font-size: 35rpx; font-weight: bold; color: #ffba00; padding: 15rpx; border-bottom: 2rpx solid #f0e6cc; box-sizing: border-box; overflow: hidden; text-align: center;}
.name{ color: #999; letter-spacing: 10rpx;}

.classify{ display: flex; width: 100%; height: 150rpx; padding: 0 30rpx; box-sizing: border-box; margin-top: 10rpx; margin-bottom: 20rpx;}
.classify view{ flex: 1; padding-top: 20rpx; box-sizing: border-box;}
.classify image{ width: 80rpx; height: 80rpx; display: block; margin: 0 auto;}
.classify text{ height: 35rpx; line-height: 35rpx; text-align: center; font-size: 30rpx; margin-top: 15rpx;}

.studentNav{ width: 100%; height: 100rpx; line-height: 100rpx; font-size: 18px; text-align: center; margin: 100rpx auto 100rpx; overflow: hidden; box-shadow: 0 20rpx 100rpx 15rpx #f8e5b2; color: #ffba00;}

.footer{ width: 100%; height: 100rpx; margin-top: 100rpx; overflow: hidden; box-shadow: 0 -20rpx 100rpx 15rpx #f8e5b2;}
.withdraw{ width: 100%; height: 100%; text-align: center; position: relative; background: none; color: #ffba00;}
.withdraw view{ max-width: 250rpx; height: 100%; margin: 0 auto; line-height: 100rpx;}
.withdraw text{ display: block; float: left; min-width: 180rpx;}
.withdraw image{ display: block; width: 60rpx; height: 60rpx; float: left; margin-top: 20rpx; margin-left: 10rpx;}