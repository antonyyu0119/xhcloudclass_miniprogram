@keyframes slide{
  0%{ transform: translateX(100%)}
  100%{ transform: translateX(-100%)}
}

ul{ display: block;}
ul li{ display: block;}
view{ overflow: hidden;}
text{ display: block; overflow: hidden;}
.nav{ width: 100%; height: 130rpx; position: relative; z-index: 1000; border-bottom: 2rpx solid #eee; box-sizing: border-box; background: #f6f6f6;}
.hint{ width: 100%; height: 50rpx; padding: 0 20rpx; box-sizing: border-box; animation: slide 8s linear infinite; color: #ffba00;}
.hint>text{ width: 50%; height: 100%; line-height: 50rpx; font-size: 20rpx; letter-spacing: 3rpx; box-sizing: border-box;}
.week{ height: 80rpx; width: 100%; background: #faf1d8;}
.week.fixed{ position: fixed; top: 0;}
.week li{ width: 100rpx; font-size: 12pt; height: 100%; line-height: 80rpx; justify-content: center; display: flex; float: left; color: #ffba00;}
.week li.on{ color:#fff; background: #ffba00;}
.scroll {
  height: 1300rpx;
  z-index: 101;
  background: #fff;
  position: relative;
  top: 0;
}

.left {
  width: 40rpx;
  height: 100rpx;
  font-size: 10pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.flex-item {
  width: 95rpx;
  height: 100px;
}
.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding-left: 3px;
}


