/* css login */
page{ width: 100%; height: 100%; overflow: hidden;}
.welcomeSreen{ position: absolute; z-index: 2; width: 100%; height: 100%; background: #ffba00; opacity: 1;}
.welcomeSreen.hidden{ opacity: 0; z-index: 1; transition: ease-in 2s;}
.welcomeSreen>view{ width: 100%; height: 40%; position: absolute; top: 50%; transform: translateY(-50%); background: #ffba00;}
.welcomeSreen>view image{ display: block; width: 200rpx; height: 200rpx; margin: 0 auto; border-radius: 50%;}
.welcomeSreen>view view{ width: 100%; height: 100rpx; line-height: 100rpx; font-size: 50rpx; color: #fff; text-align: center; margin-top: 10rpx;}
.copyright{ display: block; position: absolute; bottom: 10rpx; width: 100%; height: 20rpx; text-align: center; line-height: 20rpx; font-size: 15rpx;}
.login{ position: absolute; z-index: 1; width: 100%; height: 100%;}
.login_header{ width: 100%; text-align: center;  margin-top: 200rpx;}
.login_header view{ height: 100rpx; line-height: 100rpx; text-align: center; font-size: 50rpx; margin: 0 auto; color: #ffba00;}
.login_header image{ width: 150rpx; height: 150rpx; border-radius: 50%; margin: 0 auto;}
.login_content{ width: 650rpx; height: 200rpx; margin: 50rpx auto 0; border-bottom: 4rpx solid #eeeeee;}
.login_content view{ width: 100%; text-align: center;}
.login_content text{ display: block; color: #9d9d9d; margin-top: 40rpx;}
.login_btn{ width: 100%; height: 100rpx;}
button{ width: 300rpx; overflow: hidden; float: left; margin-top: 150rpx; margin-left: 50rpx; background-color: #ffba00; color: #fff;}
button image{ width: 45rpx; height: 45rpx; float: left; margin: 20rpx;}
button text{ float: left; font-size: 33rpx;}
.instructor_enter{ height: 40rpx; width: 300rpx; text-align: center; text-decoration: underline; line-height: 40rpx; font-size: 30rpx; position: relative; top: 50rpx; left: 50%; transform: translate(-50%, -50%);}