/* pages/askforInfo/askforInfo.wxss */

@keyframes slide{
  0%{ transform: translate(-50%,0)}
  100%{ transform: translate(-50%,-20rpx)}
}

page{ width: 100%; height: 100%; overflow: hidden; position: relative;}
view{ overflow: hidden;}

.clear{ clear: both;}
#askfor{ font-size: 35rpx; padding: 0 15rpx; box-sizing: border-box; width: 100%;}
#askfor .hasRead{}
#askfor .title{ text-align: center; display: block; width: 100%; height: 50rpx; line-height: 50%; font-size: 40rpx;}
#askfor .content{ color: #666; font-family: Arial, Helvetica, sans-serif}
#askfor .para{ display: block; text-indent: 70rpx;}
#askfor .write{ color: #ffba00; font-weight: bold; text-decoration: underline;}
#askfor .footer{ width: 60%; height: 150rpx; position: absolute; bottom: 300rpx; right: 15rpx;}
#askfor .footer view{ height: 50rpx; line-height: 50rpx; width: 100%;}
.stamp{width: 300rpx; height: 100rpx; position: absolute; bottom: 385rpx; right: -20rpx; line-height: 100rpx; text-align: center; font-size: 80rpx; font-family: SimSun; font-weight: bold; border-radius: 15rpx; opacity: 0; text-transform: uppercase; transform-origin: 50% 50%; transform: rotate(-2deg) scale(5); transition: all .3s cubic-bezier(0.6, 0.04, 0.98, 0.335);}
.stamp.approve{ color: #d00; border: 8rpx solid #d00;}
.stamp.disapprove{ color: #000;}
.on{ opacity: 0.75; transform: rotate(-15deg) scale(.8);}
#choice{ width: 100%; height: 100rpx; display: flex; position: absolute; bottom: 100rpx;}
#choice view{ flex: 1; padding: 0 100rpx;}
#choice button{ height: 80rpx; line-height: 80rpx; box-shadow: 0 10rpx 5rpx #ccc; color: #FFF;}
#approve{ background: #18ac05;}
#disapprove{ background: red;}

#popup .container{ width: 100%; background: #faf1d8; padding:  20rpx 10rpx; box-sizing: border-box;}
van-radio{ display: block;}
#popup .container .nav{ width: 100%; height: 80rpx; line-height: 80rpx; text-align: center; font-size: 35rpx; }
#popup .container .choice{ margin: 10rpx auto 10rpx; width: 80%;}
#popup .container van-radio{ margin-top: 20rpx; width: 50%; box-sizing: border-box; float: left; overflow: hidden;}
#popup .textarea_container{ width: 80%; border: 2rpx solid #ffba00; background: #fff; margin-top: 20rpx;}
#popup .textarea_container textarea{ width: 100%; padding: 10rpx; box-sizing: border-box;}
#popup .button{ width: 80%; height: 100rpx; margin: 20rpx auto 10rpx; display: flex;}
#popup .button>view{ flex: 1; padding: 20rpx 50rpx;}
#popup .button button{ font-size: 30rpx; color: #fff; background: #ffba00;}


#footer{ width: 150rpx; height: 70rpx; position: absolute; left: 50%;  bottom: 0;  color: #fff; animation: slide .5s linear infinite alternate;}
#footer image{ display: block; width: 35rpx; height: 35rpx; margin: 0 auto;}
#footer view{ width: 100%; margin-top: 10rpx; text-align: center; height: 25rpx; line-height: 25rpx;}