.clearAll{ width: 100%; height: 60rpx; padding: 0 20rpx; box-sizing: border-box;}
.clearAll>view{ width: 20%; height: 100%; line-height: 60rpx; color: #666; position: relative; font-size: 25rpx;}
.clearAll image{ width: 35rpx; height: 35rpx; position: absolute; right: 0; top: 50%; transform: translateY(-50%);}
