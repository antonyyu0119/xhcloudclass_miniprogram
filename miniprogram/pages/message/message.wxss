.nav{ position: sticky; top: 0;}
text{ display: block;}

@keyframes clear{
  0%{ transform: translateX(0);}
  100%{ transform: translateX(-110%);}
}

@keyframes zoom{
  0%{ transform: scale(1,1);}
  100%{ transform: scale(0,0);}
}

